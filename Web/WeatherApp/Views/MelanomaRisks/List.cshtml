@model IEnumerable<Sequencing.WeatherApp.Models.MelanomaRisk>

@{
    ViewBag.Title = "Index";
}

<h2>Melanoma Risk</h2>

<p><br>
    @Html.ActionLink("Add melanoma risk type", "Create", null, new { @class = "btn btn-info" })
</p><br><br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
           @Ajax.ActionLink("Edit", "Edit", new { id = item.Id }, new AjaxOptions { HttpMethod = "GET" }, new { @class = "btn btn-default" })
            @Ajax.ActionLink("Delete", "Delete", new { id = item.Id }, new AjaxOptions { HttpMethod = "POST" }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
